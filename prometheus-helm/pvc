apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  labels:
    app: grafana-grafana
    chart: grafana-0.7.0
    component: grafana
    heritage: Tiller
    release: grafana
  name: grafana-grafana
  namespace: monitor
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs-storage
